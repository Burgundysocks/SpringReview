<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.awspractice.book.mapper.UserMapper">

    <!-- SQL insert query for saving a new user -->
    <insert id="save" parameterType="com.awspractice.book.domain.dto.UserDTO">
        INSERT INTO user (id, name, email, picture, role)
        VALUES (#{id}, #{name}, #{email}, #{picture}, #{role})
    </insert>

    <!-- SQL select query for finding a user by email -->
    <select id="findByEmail" resultType="com.awspractice.book.domain.dto.UserDTO">
        SELECT id, name, email, picture, role
        FROM user
        WHERE email = #{email}
    </select>

    <!-- SQL update query for updating a user -->
    <update id="update" parameterType="com.awspractice.book.domain.dto.UserDTO">
        UPDATE user
        SET name = #{name}, picture = #{picture}, role = #{role}
        WHERE id = #{id}
    </update>

    <!-- SQL delete query for deleting a user by id -->
    <delete id="delete" parameterType="Long">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

    <!-- SQL update query for updating name and picture for a user -->
    <update id="updateNameAndPicture">
        UPDATE user
        SET name = #{name}, picture = #{picture}
        WHERE id = #{id}
    </update>

</mapper>
